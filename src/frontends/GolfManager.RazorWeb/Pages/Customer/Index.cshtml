@page
@model GolfManager.RazorWeb.Pages.Customer.IndexModel
@{
}

<div class="row">
    <div class="col">
        <h1>Customers</h1>
    </div>
</div>
<div class="row mt-2 ">
    <div class="col d-flex justify-content-end">
        <div>
            <a asp-page="/Customer/Create" class="btn btn-primary shadow "> Create</a>
        </div>
      
    </div>
</div>
<div class="row mt-2">
    <div class="col">
        <div class="card">
            <div class="card-body shadow rounded-4">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>PhoneNumber</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.Customers)
                        {
                            <tr>
                                <td>@customer.Name</td>
                                <td>@customer.PhoneNumber</td>
                                <td>
                                    <a asp-page="/Customer/Edit" asp-route-id="@customer.Id" class="btn btn-primary shadow w-25">Edit</a>
                                    <a asp-page="/Customer/Delete" asp-route-id="@customer.Id" class="btn btn-danger shadow ms-2 w-25">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
   
    </div>
</div>